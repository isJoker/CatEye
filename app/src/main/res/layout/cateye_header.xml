<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center">

    <com.wjc.cateye.view.userefresh.RefreshView
        android:id="@+id/maoyan_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/progress_maoyan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <ProgressBar
            style="?android:progressBarStyleInverse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateDrawable="@anim/loading_rotate"
            android:indeterminateDuration="1000" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/loading_img" />
    </FrameLayout>

</LinearLayout>
