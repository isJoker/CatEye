<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_discover3"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:src="@drawable/bg_discover2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:text="《血战钢锯岭》专业口碑出炉：近年最精彩的战争戏"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tv_where2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:text="猫眼资讯"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_display_count3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/display"/>

                <TextView
                    android:id="@+id/tv_comment_count3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/comment"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="3" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
