<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_business"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_business"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="商圈"
                android:textSize="13sp"
                android:gravity="center"/>
            <View
                android:id="@+id/view_business"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@android:color/holo_red_light"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_subway"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_subway"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="地铁站"
                android:textSize="13sp"
                android:gravity="center"/>
            <View
                android:id="@+id/view_subway"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@android:color/holo_red_light"
                android:visibility="invisible"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44878787"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_business"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="#44cfcfcf"
            android:divider="@null"/>

        <ListView
            android:id="@+id/lv_show_data"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@null"/>

    </LinearLayout>

</LinearLayout>